{
  "compilerOptions": {
    "target": "ESNext", // Modern JS
    "module": "ESNext", // ES module output
    "lib": ["DOM", "ESNext"], // JSX.Element and DOM APIs
    "jsx": "react-jsx", // React 17+ JSX runtime
    "declaration": true, // Emit .d.ts files
    "declarationDir": "dist", // Where to put .d.ts files
    "outDir": "dist", // JS output path
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*",
    "src/styles.d.ts", // Include CSS module types
    "playground"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "example",
    "playground",
    "**/*.test.tsx" // Exclude test files
  ]
}
